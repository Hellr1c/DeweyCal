<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    >

    <EditText
        android:id="@+id/txtCal"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="96dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="49dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtResult"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textSize="34dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtCal"
        />

    <Button
        android:id="@+id/btnAC"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="C"
        android:textStyle="bold"
        android:textSize="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtResult"
        />

    <Button
        android:id="@+id/btnC"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="CE"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintLeft_toRightOf="@id/btnAC"
        app:layout_constraintTop_toBottomOf="@id/txtResult"
        />

    <Button
        android:id="@+id/btnBackSpace"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="â†"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintLeft_toRightOf="@id/btnC"
        app:layout_constraintTop_toBottomOf="@id/txtResult"
        />

    <Button
        android:id="@+id/btn7"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="7"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAC"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="8"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintLeft_toRightOf="@id/btn7"
        app:layout_constraintTop_toTopOf="@id/btn7"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="9"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintLeft_toRightOf="@id/btn8"
        app:layout_constraintTop_toTopOf="@id/btn8"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="/"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintLeft_toRightOf="@id/btn9"
        app:layout_constraintTop_toTopOf="@id/btn9"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="4"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@id/btn7"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="5"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@id/btn4"
        app:layout_constraintTop_toTopOf="@id/btn4"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="6"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@id/btn5"
        app:layout_constraintTop_toTopOf="@id/btn5"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="x"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@id/btn6"
        app:layout_constraintTop_toTopOf="@id/btn6"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="1"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="2"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintTop_toTopOf="@id/btn1"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="3"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintTop_toTopOf="@id/btn2"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="-"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@id/btn3"
        app:layout_constraintTop_toTopOf="@id/btn3"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="."
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@id/btn1"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btn0"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="0"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@id/btnDot"
        app:layout_constraintTop_toTopOf="@id/btnDot"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btnCompute"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="="
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@id/btn0"
        app:layout_constraintTop_toTopOf="@id/btn0"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:text="+"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@id/btnCompute"
        app:layout_constraintTop_toTopOf="@id/btnCompute"
        android:layout_marginLeft="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>